
<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    margin-left: auto;
    display: flex;
    align-items: center;
  }
</style>

<!--  CATEGORY FILTER BAR -->
<div id="filters">
  <a href="/listings/category/trending" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

  <a href="/listings/category/rooms" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>

  <a href="/listings/category/iconic cities" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-landmark"></i></div>
    <p>Iconic cities</p>
  </a>

  <a href="/listings/category/mountains" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>

  <a href="/listings/category/castles" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </a>

  <a href="/listings/category/amazing pools" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </a>

  <a href="/listings/category/camping" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>

  <a href="/listings/category/farms" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>

  <a href="/listings/category/arctic" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>

  <a href="/listings/category/domes" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </a>

  <a href="/listings/category/boats" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </a>

  <!--  Show All -->
  <a href="/listings" class="filter text-dark text-decoration-none">
    <div><i class="fa-solid fa-globe"></i></div>
    <p>All</p>
  </a>

  <!--  TAX TOGGLE (same line right side) -->
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault" />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- SEARCH RESULT MESSAGE -->
<% if (typeof searchQuery !== 'undefined') { %>
  <div class="text-center mt-3">
    <h5>Showing results for "<%= searchQuery %>"</h5>
  </div>
<% } %>

<!--  ALL LISTINGS DISPLAY -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
      <div class="card col listing-card shadow-sm mb-4">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_img"
          style="height:20rem; object-fit:cover;"
        />
        <div class="card-body">
          <p class="card-text mb-1"><b><%= listing.title %></b></p>
          <p class="card-text text-muted mb-1">
            <%= listing.location %>, <%= listing.country %>
          </p>
          <p class="card-text">
            â‚¹<%= listing.price.toLocaleString("en-IN") %>/ night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
          <span class="badge bg-secondary text-capitalize"><%= listing.category %></span>
        </div>
      </div>
    </a>
  <% } %>
</div>

<!--  TAX TOGGLE SCRIPT -->
<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });
</script>

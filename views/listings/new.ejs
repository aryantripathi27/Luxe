<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h4 class="mb-4">Create a New Listing</h4>

    <form
      method="POST"
      action="/listings"
      enctype="multipart/form-data"
      class="needs-validation"
      novalidate
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a title</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label fw-semibold">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          class="form-control"
          placeholder="Write a short description"
          rows="3"
          required
        ></textarea>
        <div class="invalid-feedback">Please add a description</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label fw-semibold">Upload Image</label>
        <input
          type="file"
          name="listing[image]"
          id="image"
          class="form-control"
          accept="image/*"
          required
        />
        <div class="invalid-feedback">Please upload an image</div>
      </div>

      <!-- Price + Location -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label fw-semibold">Price</label>
          <input
            type="number"
            name="listing[price]"
            id="price"
            class="form-control"
            min="0"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input
            type="text"
            name="listing[location]"
            id="location"
            class="form-control"
            placeholder="Delhi"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label fw-semibold">Country</label>
        <input
          type="text"
          name="listing[country]"
          id="country"
          class="form-control"
          placeholder="India"
          required
        />
        <div class="invalid-feedback">Please enter a valid country</div>
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label fw-semibold">Category</label>
        <select
          name="listing[category]"
          id="category"
          class="form-select"
          required
        >
          <option value="">-- Select Category --</option>
          <% categories.forEach(category => { %>
            <option value="<%= category %>">
              <%= category.charAt(0).toUpperCase() + category.slice(1) %>
            </option>
          <% }) %>
        </select>
        <div class="invalid-feedback">Please select a valid category</div>
      </div>

      <!-- Submit -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-dark px-4">Add Listing</button>
      </div>
    </form>
  </div>
</div>
